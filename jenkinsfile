pipeline {
    agent {
        label "windows"
    }
    tools {
        maven 'Maven3'
        jdk 'java8'
    }
    stages {
        stage ('Initialize') {
            steps {
                bat '''
                    echo "PATH = %PATH%"
                    echo "M2_HOME = %M2_HOME%"
                '''
            }
        }

        stage ('Build') {
            steps {
                    bat 'mvn install'
            }
             post {
                success {
                    bat'mvn package'
                        }
	stage ('Deploy') {
            steps {
                    bat 'cd target & copy CountWebApp.war c:/apache/tomcat/webapps'
            }

	
                 }
               

           
            }
        }
    
}